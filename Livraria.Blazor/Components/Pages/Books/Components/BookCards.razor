@switch (Books)
{
    case { Count: 0 }:
        <div class="alert alert-warning mb-5" role="alert">
            Nenhum livro encontrado.
        </div>
        break;
    default:
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var book in Books)
            {
                <div class="col">
                    <BookCard Book="book"/>
                </div>
            }
        </div>
        break;
}


@code {
    [Parameter] public List<ViewBook> Books { get; set; } = null!;

}