@switch ( Book )
{
    case null:
        <ShowLoading />
        break;
    case var book:
        <div class="card shadow-sm">
            <div class="embed-responsive embed-responsive-16by9">
                <img src="/image/@Book.Cover" class="card-img-top" alt="@Book.Title">
            </div>
            <div class="card-body">
                <h5 class="card-title">@Book.Title</h5>
                <p class="card-text">@Book.Author</p>
                <p class="card-text">@Book.PublishedAt.ToShortDateString()</p>
                <p class="card-text">@Book.PublishingCompany</p>
                <p class="card-text">@Book.Category</p>
                <p class="card-text">@Book.Synopsis</p>
                <a href="/livros/editar/@Book.Id" class="card-link">Editar</a>
                <a href="#" class="card-link">Excluir</a>
            </div>
        </div>
        break;
}

@code {
    [Parameter] public ViewBook? Book { get; set; }
}